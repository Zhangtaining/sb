# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_USER=gym
POSTGRES_PASSWORD=gympass
POSTGRES_DB=gymdb
DATABASE_URL=postgresql+asyncpg://gym:gympass@localhost:5432/gymdb

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── MinIO / S3 ────────────────────────────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_CLIPS=gym-clips
MINIO_SECURE=false

# ── Anthropic (LLM) ───────────────────────────────────────────────────────────
# Get your key at https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# ── API Service ───────────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
# Secret key for JWT signing (change in production)
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256

# ── Guidance Service ──────────────────────────────────────────────────────────
# Max LLM guidance messages per track per second (rate limit)
GUIDANCE_RATE_LIMIT_SECONDS=30
LLM_MODEL=claude-sonnet-4-6
LLM_MAX_TOKENS=1024

# ── Ingestion Service ─────────────────────────────────────────────────────────
# Comma-separated list of camera IDs to ingest on startup
# (cameras must be registered in the DB first via scripts/register_camera.py)
CAMERA_IDS=cam-01
INGEST_FPS=15
INGEST_JPEG_QUALITY=85
# Rolling frame buffer length per camera (frames)
FRAME_BUFFER_SIZE=225

# ── Perception Service ────────────────────────────────────────────────────────
YOLO_MODEL=yolo11n-pose.pt
REID_MODEL_PATH=services/perception/models/osnet_x1_0.pth

# ── Logging ───────────────────────────────────────────────────────────────────
# "json" for structured production logs, "console" for human-readable dev logs
LOG_FORMAT=console
LOG_LEVEL=INFO

# ── Environment ───────────────────────────────────────────────────────────────
ENVIRONMENT=development
